{
  "name": "@liuli-util/cli",
  "version": "3.22.0",
  "description": "一个针对于库和 CLI 应用程序打包的零配置 CLI",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "setup": "pnpm build",
    "build": "tsx src/bin.ts build cli",
    "dev": "tsx src/bin.ts build cli -w",
    "start": "tsx src/bin.ts",
    "test": "jest --all",
    "lint": "eslint --fix src/**"
  },
  "bin": {
    "liuli-cli": "./bin.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@liuli-util/commitlint-standard-config": "workspace:*",
    "@liuli-util/eslint-config-react-ts": "workspace:*",
    "@liuli-util/eslint-config-ts": "workspace:*",
    "@liuli-util/prettier-standard-config": "workspace:*",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "ajv-i18n": "^4.2.0",
    "chokidar": "^3.5.3",
    "commander": "^9.4.0",
    "conf": "^10.2.0",
    "enquirer": "^2.3.6",
    "esbuild": "0.14.39",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "glob-promise": "^5.0.0",
    "json5": "^2.2.1",
    "simple-git": "^3.11.0",
    "spinnies": "^0.5.1",
    "ssh2": "^1.11.0",
    "ssh2-sftp-client": "^9.0.3",
    "tar": "^6.1.11",
    "ts-morph": "^15.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.6.4",
    "@types/ssh2-sftp-client": "^7.1.0",
    "jest": "^28.1.3",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "tsx": "^3.9.0",
    "type-fest": "^2.18.0",
    "typescript": "^4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxliuli/liuli-tools/tree/master/apps/liuli-cli"
  },
  "exports": {
    "import": "./dist/index.esm.js",
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "type": "module"
}

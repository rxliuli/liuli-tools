{
  "name": "@liuli-util/i18next-util",
  "version": "0.3.0",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "setup": "pnpm build",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "docs:server": "live-server docs",
    "docs:dev": "typedoc --watch",
    "docs:build": "rm docs && typedoc",
    "docs:deploy": "pnpm build && gh-pages -d docs/ -e / -a",
    "gen-i18n": "i18next-dts-gen --dirs src/__tests__/i18n",
    "lint": "eslint --fix src/**",
    "test": "jest --all"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxliuli/liuli-tools/tree/master/libs/i18next-util"
  },
  "peerDependencies": {
    "i18next": "^20.3.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "i18next": "^21.8.16",
    "jest": "^28.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4",
    "tsup": "^6.2.3"
  },
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "type": "module"
}

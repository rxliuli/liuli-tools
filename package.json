{
  "name": "@liuli-util/all",
  "version": "3.2.6",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean-all": "pnpx rimraf **/node_modules **/dist",
    "build-all": "nx run-many --target=build --all",
    "dep-graph": "nx dep-graph",
    "docs-build": "fliegdoc build && cp CNAME docs/",
    "docs-serve": "fliegdoc serve",
    "docs-deploy": "pnpm docs-build && gh-pages -d docs -t true",
    "postinstall": "simple-git-hooks"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@jscutlery/semver": "^2.15.0",
    "@liuli-util/cli": "^3.11.0",
    "@liuli-util/prettier-standard-config": "^0.1.0",
    "@nrwl/cli": "latest",
    "@nrwl/tao": "latest",
    "@nrwl/workspace": "latest",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.4.13",
    "fliegdoc": "^0.5.1",
    "fs-extra": "^10.0.0",
    "gh-pages": "^3.2.3",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "ts-node": "^10.1.0",
    "type-fest": "^2.0.0",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxliuli/liuli-utils"
  }
}

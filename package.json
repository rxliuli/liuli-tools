{
  "name": "liuli-tools",
  "private": true,
  "license": "MIT",
  "scripts": {
    "setup-all": "pnpm --filter . run setup",
    "setup-all-with-nx": "nx run-many --target=setup --all --parallel",
    "build-all": "nx run-many --target=build --all",
    "test-all": "pnpm --filter . --parallel run test",
    "lint-all": "pnpm --filter . --parallel run lint",
    "test-all-with-nx": "nx run-many --target=test --all --parallel",
    "dep-graph": "nx dep-graph",
    "postinstall": "pnpx simple-git-hooks"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@liuli-util/commitlint-standard-config"
    ]
  },
  "lint-staged": {
    "**/src/**/*.{ts,tsx,js,jsx,css}": [
      "prettier --write",
      "eslint --fix --quiet"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@liuli-util/eslint-config-ts"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@liuli-util/commitlint-standard-config": "workspace:*",
    "@liuli-util/eslint-config-ts": "workspace:*",
    "@liuli-util/prettier-standard-config": "workspace:*",
    "@nrwl/cli": "^13.8.2",
    "@nrwl/tao": "^13.8.2",
    "@nrwl/workspace": "^13.8.2",
    "lint-staged": "^11.2.6",
    "prettier": "^2.5.1",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.5.5"
  }
}

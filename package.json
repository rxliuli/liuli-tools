{
  "name": "liuli-tools",
  "private": true,
  "license": "MIT",
  "scripts": {
    "setup-all": "nx run-many --target=setup --all --parallel",
    "build-all": "nx run-many --target=build --all",
    "dep-graph": "nx dep-graph",
    "postinstall": "pnpx simple-git-hooks"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@liuli-util/commitlint-standard-config"
    ]
  },
  "lint-staged": {
    "**/src/**/*.{ts,tsx,js,jsx,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@liuli-util/eslint-config-ts"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@liuli-util/commitlint-standard-config": "*",
    "@liuli-util/eslint-config-ts": "*",
    "@liuli-util/prettier-standard-config": "*",
    "@nrwl/cli": "latest",
    "@nrwl/tao": "latest",
    "@nrwl/workspace": "latest",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.6.1",
    "typescript": "^4.4.3"
  }
}

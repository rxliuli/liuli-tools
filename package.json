{
  "name": "liuli-tools",
  "private": true,
  "license": "MIT",
  "scripts": {
    "setup": "yarn && yarn runstream setup && yarn",
    "clean": "lerna run clean --parallel && lerna clean -y && rimraf node_modules",
    "runstream": "lerna run --include-dependencies --stream",
    "build": "yarn runstream build",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "yarn docs:build && gh-pages -d docs/.vuepress/dist -a",
    "postinstall": "npx simple-git-hooks"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "workspaces": {
    "packages": [
      "libs/*",
      "apps/*",
      "examples/*",
      "templates/*"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@liuli-util/prettier-standard-config": "^0.1.0",
    "gh-pages": "^3.2.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "typescript": "^4.3.4",
    "vuepress": "^1.8.2"
  }
}

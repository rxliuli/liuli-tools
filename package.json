{
  "name": "@liuli-util/all",
  "version": "3.2.5",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "yarn workspaces foreach -p exec rimraf dist release",
    "build": "yarn workspaces foreach -p --topological-dev run build",
    "test": "yarn workspaces foreach exec yarn jest --all",
    "gen:readme": "gulp generateReadmes",
    "docs:build": "fliegdoc build && gulp copyDocsFile",
    "docs:serve": "fliegdoc serve",
    "docs:deploy": "yarn docs:build && gh-pages -d docs -t true",
    "postinstall": "yarn dlx simple-git-hooks"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "crlf"
  },
  "workspaces": {
    "packages": [
      "libs/*"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@liuli-util/async": "workspace:libs/async",
    "@liuli-util/cli": "^3.7.1",
    "@types/fs-extra": "^9.0.12",
    "@types/gulp": "^4.0.9",
    "@types/node": "^16.4.13",
    "fliegdoc": "^0.5.1",
    "fs-extra": "^10.0.0",
    "gh-pages": "^3.2.3",
    "gulp": "^4.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "ts-node": "^10.1.0",
    "type-fest": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxliuli/liuli-utils"
  }
}

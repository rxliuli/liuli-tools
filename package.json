{
  "name": "liuli-tools",
  "private": true,
  "license": "MIT",
  "scripts": {
    "setup": "yarn changed foreach -p --topological-dev --include=@liuli-util/i18next-util run setup",
    "clean": "yarn workspaces foreach -p exec \"yarn dlx rimraf dist node_modules\"",
    "build": "yarn workspaces foreach -p --topological-dev run build",
    "build:cache": "yarn changed foreach -p --topological-dev run setup",
    "list:cache": "yarn changed list",
    "postinstall": "npx simple-git-hooks"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "workspaces": [
    "libs/*",
    "apps/*",
    "examples/*",
    "templates/*",
    "docs",
    "!website"
  ],
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@liuli-util/commitlint-standard-config"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@liuli-util/eslint-config-ts"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@liuli-util/commitlint-standard-config": "*",
    "@liuli-util/eslint-config-ts": "*",
    "@liuli-util/prettier-standard-config": "*",
    "gh-pages": "^3.2.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "typescript": "^4.3.5"
  }
}

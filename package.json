{
  "name": "liuli-tools",
  "private": true,
  "license": "MIT",
  "scripts": {
    "setup": "yarn workspaces foreach -p --topological-dev run setup",
    "clean": "yarn workspaces foreach -p exec \"yarn dlx rimraf dist node_modules\"",
    "build": "yarn workspaces foreach -p --topological-dev run build",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "yarn docs:build && gh-pages -d docs/.vuepress/dist -a"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "crlf"
  },
  "workspaces": {
    "packages": [
      "libs/*",
      "apps/*",
      "examples/*",
      "templates/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "yarn commitlint --edit $1"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "gh-pages": "^3.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.4",
    "vuepress": "^1.8.2"
  }
}

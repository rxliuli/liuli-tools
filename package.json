{
  "name": "@liuli-util/all",
  "private": true,
  "license": "MIT",
  "scripts": {
    "setup": "yarn && lerna run build --include-dependencies --stream && yarn",
    "fix:version": "syncpack fix-mismatches",
    "gen:readme": "gulp generateReadmes",
    "docs:build": "fliegdoc build && gulp copyDocsFile",
    "docs:serve": "fliegdoc serve",
    "deploy": "yarn docs:build && gh-pages -d docs -t true",
    "test": "lerna run test --parallel"
  },
  "workspaces": {
    "packages": [
      "libs/*"
    ]
  },
  "devDependencies": {
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "@liuli-util/cli": "*",
    "type-fest": "^0.21.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "syncpack": "^5.6.10",
    "@types/fs-extra": "^9.0.6",
    "fs-extra": "^9.0.1",
    "gh-pages": "^3.1.0",
    "fliegdoc": "^0.4.4",
    "@types/gulp": "^4.0.8",
    "gulp": "^4.0.2",
    "ts-node": "^9.1.1",
    "@types/node": "^12.19.14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxliuli/rx-util"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  }
}
